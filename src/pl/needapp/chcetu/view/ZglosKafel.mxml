    <!--<s:HGroup width="100%">
        <s:Spacer width="90%"/>
        <s:Label text="({count})" fontSize="10"/>
    </s:HGroup>-->
    <s:Image smooth="true" source="{source}" useHandCursor="true" buttonMode="true" width="100%" height="100%"/>
    <s:Label fontSize="14" text="{label} ({count})" textAlign="center"  width="100%"/>

    <fx:Script><![CDATA[
        import spark.components.ViewNavigator;

        [Bindable]
        public var source:String;
        [Bindable]
        public var label:String;
