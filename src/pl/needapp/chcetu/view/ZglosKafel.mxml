<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" useHandCursor="true" buttonMode="true" click="{navigator.pushView(ZglaszamView, {label:description})}" width="100%">
